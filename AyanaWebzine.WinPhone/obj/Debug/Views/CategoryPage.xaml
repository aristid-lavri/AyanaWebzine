                        <ListBox x:ConnectionId='2' x:Name="CultureArticlesList" ItemsSource="{Binding Categories[6].Articles}"  ItemTemplate="{StaticResource ArticlesListTemplate}" Margin="0,0,-24,-137" Grid.RowSpan="2" Grid.Row="1"                          />
                    </Grid>
