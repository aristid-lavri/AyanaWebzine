                <PivotItem  Header="mode" Margin="0">
                    <Grid Margin="0,0,0,-0.333">
                        <ListBox x:ConnectionId='8' x:Name="ModeArticlesList" ItemsSource="{Binding Categories[0].Articles}" ItemTemplate="{StaticResource ArticlesListTemplate}" Margin="0"                          />
                    </Grid>
                </PivotItem>

                <PivotItem CacheMode="{x:Null}" Header="beaute" Margin="12,0">
                    <Grid>
                        <ListBox x:ConnectionId='7' x:Name="BeauteArticlesList" ItemsSource="{Binding Categories[1].Articles}" ItemTemplate="{StaticResource ArticlesListTemplate}" Margin="0" Grid.RowSpan="2" Grid.Row="1"                           IsHoldingEnabled="False" IsDoubleTapEnabled="False" IsRightTapEnabled="False" IsTapEnabled="False"/>
                    </Grid>
                </PivotItem>

                <PivotItem CacheMode="{x:Null}" Header="couple/sexo" Margin="12,0">
                    <Grid>
                        <ListBox x:ConnectionId='6' x:Name="CoupleArticlesList" ItemsSource="{Binding Categories[2].Articles}" ItemTemplate="{StaticResource ArticlesListTemplate}" Margin="0,0,-24,-137" Grid.RowSpan="2" Grid.Row="1"                          />
                    </Grid>
                </PivotItem>

                <PivotItem CacheMode="{x:Null}" Header="bien être" Margin="12,0">
